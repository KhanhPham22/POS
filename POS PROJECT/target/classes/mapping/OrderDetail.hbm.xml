<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="model">
    <joined-subclass name="model.OrderDetail" table="order_detail" extends="model.BaseEntity">
        <key column="id" />

        <many-to-one name="customer" class="model.Customer" column="person_id" not-null="true" />
        <property name="totalAmount" column="total_amount" type="double" not-null="true" />
        <property name="orderDate" column="order_date" type="timestamp" />

        <set name="items" table="order_item" lazy="false" cascade="all">
            <key column="order_id"/>
            <one-to-many class="model.OrderItem"/>
        </set>
    </joined-subclass>
</hibernate-mapping>