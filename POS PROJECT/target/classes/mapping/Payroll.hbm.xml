<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="model.Payroll" table="payroll" extends="model.BaseEntity">
        <key column="payroll_id" />

        <many-to-one name="employee" class="model.Employee" column="person_id" not-null="true" />
        <property name="baseSalary" column="base_salary" type="double" not-null="true" />
        <property name="bonus" column="bonus" type="double" />
        <property name="commission" column="commission" type="double" />
        <property name="totalSalary" column="total_salary" type="double" not-null="true" />
        <property name="month" column="month" type="model.MonthUserType" />
        <property name="year" column="year" type="model.YearUserType" />
    </joined-subclass>
</hibernate-mapping>