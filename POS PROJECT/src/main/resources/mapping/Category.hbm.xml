<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="model.Category" table="category" extends="model.BaseEntity">
       <key column="category_id" />

        <property name="name" column="name" type="string" length="100" not-null="true"/>
        <property name="description" column="description" type="string" length="255"/>
        <set name="products" cascade="all" inverse="true">
            <key column="category_id"/>
            <one-to-many class="model.Product"/>
        </set>
    </joined-subclass>
</hibernate-mapping>