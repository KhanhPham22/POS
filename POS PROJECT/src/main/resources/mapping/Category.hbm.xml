<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!-- Mapping the 'Category' class as a joined-subclass of BaseEntity -->
    <joined-subclass name="model.Category" extends="model.BaseEntity" table="category">
        <!-- Foreign key linking to BaseEntity's id -->
        <key column="id"/>

        <!-- Mapping properties of 'Category' -->
        <property name="name" column="name" length="100" not-null="true"/>
        <property name="description" column="description" length="255"/>

        <!-- One-to-many relationship with 'Product' -->
        <set name="products" cascade="all" fetch="select">
            <key column="category_id"/>
            <one-to-many class="model.Product"/>
        </set>
    </joined-subclass>
</hibernate-mapping>