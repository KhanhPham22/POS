<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="model.Supplier" extends="model.BaseEntity" table="supplier">
        <key column="supplier_id" />

        <property name="name" column="name" not-null="true" length="100" />
        <property name="contactName" column="contact_name" length="100" />
        <property name="phone" column="phone" not-null="true" unique="true" length="20" />
        <property name="email" column="email" unique="true" length="100" />
        <property name="address" column="address" length="255" />
        <property name="taxCode" column="tax_code" unique="true" length="50" />
        
        <set name="warehouseImports" cascade="all" lazy="true" inverse="true">
            <key column="supplier_id" />
            <one-to-many class="model.Warehouse" />
        </set>
        
        <set name="items" cascade="all" lazy="true" inverse="true">
    <key column="supplier_id"/>
    <one-to-many class="model.Item"/>
</set>

    </joined-subclass>
</hibernate-mapping>