<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="model.UserSession" extends="model.BaseEntity" table="user_sessions">
        <key column="session_id" />

        <property name="sessionToken" column="session_token" not-null="true" />
        <property name="timestamp" column="timestamp" not-null="true" />
        <property name="expiryTime" column="expiry_time" not-null="true" />
        <property name="employeeNumber" column="employee_number" />
        <property name="sessionData" column="session_data" />
        <many-to-one name="employee" class="model.Employee" column="person_id" not-null="true" lazy="proxy" />
    </joined-subclass>
</hibernate-mapping>