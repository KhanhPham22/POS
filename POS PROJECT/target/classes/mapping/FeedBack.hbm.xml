<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="model.Feedback" table="feedback" extends="model.BaseEntity">
        <key column="feedback_id" />

        <many-to-one name="customer" class="model.Customer" column="person_id" not-null="true" />
        <property name="type" column="type" length="50" />
        <property name="content" column="content" type="text" />
        <property name="rating" column="rating" not-null="true" />
        <many-to-one name="store" class="model.Store" column="store_id" not-null="true" />
    </joined-subclass>
</hibernate-mapping>