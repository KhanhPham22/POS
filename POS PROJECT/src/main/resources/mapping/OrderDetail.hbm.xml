<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="model.OrderDetail" table="order_detail" extends="model.BaseEntity">
        <key column="id"/>
        <many-to-one name="customer" class="model.Customer" column="person_id" not-null="true"/>
        <many-to-one name="product" class="model.Product" column="product_id" not-null="true"/>
        <property name="quantity" column="quantity" type="integer" not-null="true"/>
        <property name="unitPrice" column="unit_price" type="big_decimal" not-null="true"/>
        <property name="totalPrice" column="total_price" type="big_decimal" not-null="true"/>
        <property name="discount" column="discount" type="big_decimal"/>
        <property name="paymentMethod" column="payment_method" type="string" length="50"/>
        <property name="status" column="status" type="string" length="20"/>
        <property name="totalAmount" type="java.lang.Double">
    <column name="total_amount" />
</property>
    </joined-subclass>
</hibernate-mapping>