<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <joined-subclass name="model.GiftVoucher" table="gift_voucher" extends="model.BaseEntity">
        <key column="gift_voucher_id" />

        <many-to-one name="customer" class="model.Customer" column="person_id" not-null="true" />
        <property name="voucherName" column="voucher_name" length="100" not-null="true" />
        <property name="discountStatus" column="discount_status" not-null="true" />
        <property name="startDate" column="start_date" not-null="true" />
        <property name="endDate" column="end_date" not-null="true" />
        <property name="discountType" column="discount_type" length="50" />
        
         <set name="products" cascade="all" inverse="true">
            <key column="gift_voucher_id"/>
            <one-to-many class="model.Product"/>
        </set>
    </joined-subclass>
</hibernate-mapping>